@model FeedbackService.Models.Comment

@{
    ViewBag.Title = "Новый комментарий";
}

<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Ошибка")
    <fieldset>
        <legend>Комментарий</legend>

        @Html.HiddenFor(model => model.FeedbackId)

        @*<div class="editor-label">
            @Html.LabelFor(model => model.Message)
        </div>*@
        <div class="editor-field">
            @Html.EditorFor(model => model.Message)
            @Html.ValidationMessageFor(model => model.Message)
        </div>

        <p>
            <input type="submit" value="Отправить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к комментариям", "Details", "Feedback", new { id = Model.FeedbackId }, null)
</div>
