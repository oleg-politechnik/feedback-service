@model FeedbackService.Models.Site

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Site</legend>

    <div class="display-label">Url</div>
    <div class="display-field">
        <a>@Html.DisplayFor(model => model.Url)</a>
    </div>

    @*<div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>*@

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.SiteId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<p>
    @Html.ActionLink("Добавить отзыв", "Create", "Feedback", new { id=Model.SiteId }, null)
</p>
<table>
    <tr>
        <th>
            Message
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Feedbacks) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Feedback", new { id=item.FeedbackId }, null) |
            @Html.ActionLink("Details", "Details", "Feedback", new { id = item.FeedbackId }, null) |
            @Html.ActionLink("Delete", "Delete", "Feedback", new { id = item.FeedbackId }, null)
        </td>
    </tr>
}

</table>
